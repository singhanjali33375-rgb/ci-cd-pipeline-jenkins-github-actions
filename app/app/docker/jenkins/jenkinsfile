pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Build') {
      steps {
        sh 'npm install'
      }
    }
    stage('Test') {
      steps {
        sh 'npm test'
      }
    }
    stage('Docker Build') {
      steps {
        sh 'docker build -t cicd-app .'
      }
    }
    stage('Deploy') {
      steps {
        sh 'echo Deploying application'
      }
    }
  }
}
